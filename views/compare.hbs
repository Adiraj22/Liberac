<div class="content-section-c">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <section id="main" class="wrapper" style="padding-top: 0;">
          <div class="inner">
            <header class="align-center" style="margin-top: 1.2rem; margin-bottom: 2rem;">
              <h1>Provider Comparison</h1>
            </header>
            <div class="align-left" style="float: left; margin-left: 8rem">
              <h1 style="text-align: center; margin-bottom: 16%">Liberac</h1>
              <label for="liberac_fees" style="text-align: center;">Fixed Fees</label>
              <input type="text" id="liberac_fees" value="" disabled>
              <label for="liberac_total" style="text-align: center; margin-top: 1.1rem;">Total Fees</label>
              <input type="text" id="liberac_total" value="" disabled>
            </div>
            <div class="align-right" style="float: right; margin-right: 8rem">
              <select name="select" id="competitor_options" style="-webkit-appearance: menulist; background: none; margin-bottom: 10%;">
                <option value="klickex">KlickEx</option>
                <option value="westernunion">Western Union</option>
                <option value="moneygram">Moneygram</option>
                <option value="pacificezy">Pacific Ezy</option>
                <option value="anz">ANZ</option>
              </select>
              <label for="competitor_fees" style="text-align: center;">Fixed Fees</label>
              <input type="text" id="competitor_fees" value="" disabled>
              <label for="competitor_total" style="text-align: center; margin-top: 1.1rem;">Total Fees</label>
              <input type="text" id="competitor_total" value="" disabled>
            </div>
            <div class="align-center" style="clear: both;">
              <label for="transfer-slider" style="font-size: 18px; padding-top: 0.8rem;">Transfer Amount</label>
              <input type="range" id="transfer-slider" min="100" max="1000" step="100" value="200" list="transfer-amounts" />
              <datalist id="transfer-amounts">
                <option>100</option>
                <option>200</option>
                <option>300</option>
                <option>400</option>
                <option>500</option>
                <option>600</option>
                <option>700</option>
                <option>800</option>
                <option>900</option>
                <option>1000</option>
              </datalist>
              <div id="transfer-value" style="font-size: 20px; margin-bottom: 0.8rem;">$200</div>
              <a href="/send">
                <button>Sign Up</button>
              </a>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>