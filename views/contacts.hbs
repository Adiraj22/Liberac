<div id="contacts" class="content-section-c">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        {{>navigation}}
      </div>
      <div class="col-lg-6">  
        <h2>Contacts</h2>
        <div class="well">
        {{#if contacts}}
        <form method="POST" action="/contacts/edit/{{contacts.0.nickname}}" class="form-inline">
          <select class="form-control" name="contacts" onchange="$('form').attr('action', $('select').val())">
          {{#each contacts}}
            <option value="/contacts/edit/{{this.nickname}}">{{this.nickname}}</option>
          {{/each}}
          </select>
          <button type="submit" class="btn btn-danger">Edit Contact</button>
          <a class="btn btn-danger" href="/contacts/add" role="button">Add Contact</a>
          <!-- <p><a class="btn btn-danger" id="delete" href="/contacts/delete/{{contacts.0.nickname}}" role="button">Delete Payee</a></p> -->
        </form>
        {{else}}
          <h4>Would you like to add your first contact?</h4>
          <p><a class="btn btn-danger" href="/contacts/add" role="button">Add New Contact</a></p>
        {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>