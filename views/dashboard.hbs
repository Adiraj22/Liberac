<div class="content-section-c">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        {{>navigation}}
        <h2>Welcome {{user.first_name}}! Your current balance is ${{user.balance}}.</h2>
        {{#unless user.verified}}
        <div class="alert alert-warning" role="alert">Before we can get started, we'll need you to provide some identification for regulatory purposes. <a href="/upload">Click here</a> to get started.</div>
        {{/unless}}
        <div class="well">


          <div class="row">
            <div class="col-lg-12"><h3>User Details</h3></div>
          </div>
          <div class="row">
            <div class="col-sm-2 text-right">Name:</div><div class="col-sm-10">{{user.first_name}} {{user.middle_name}} {{user.last_name}}</div>
            <div class="col-sm-2 text-right">Phone:</div><div class="col-sm-10">{{user.phone}}</div>
            <div class="col-sm-2 text-right">Email address:</div><div class="col-sm-10">{{user.email}}</div>
            <div class="col-sm-2 text-right">Address:</div><div class="col-sm-10">{{user.street}}, {{#if user.suburb}}{{user.suburb}},{{/if}} {{user.city}}, {{user.postcode}}</div>
            <div class="col-sm-2 text-right">Date of birth:</div><div class="col-sm-10">{{user.dateofbirth}}</div>
            {{#if user.passport_number}}
              <div class="col-sm-12">&nbsp;</div>
              <div class="col-sm-2 text-right">Passport number:</div><div class="col-sm-10">{{user.passport_number}}</div>
              <div class="col-sm-2 text-right">Expiry date:</div><div class="col-sm-10">{{user.passport_expiry}}</div>
              <div class="col-sm-offset-2 col-sm-10">
                <img class="media-object" src="https://liberacfilestorage.blob.core.windows.net/passports/{{user.id}}" alt="Passport">
                <img class="media-object" src="https://liberacfilestorage.blob.core.windows.net/addressproofs/{{user.id}}" alt="Address Proof">
              </div>
            {{/if}}
          </div>
      </div>
    </div>
  </div>
</div>
