<div class="content-section-c">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <ul class="nav nav-tabs">
          <li role="presentation"><a href="/dashboard">Home</a></li>
          <li role="presentation" class="active"><a href="/payees">Contacts</a></li>
          <li role="presentation"><a href="#" disabled>Send Money</a></li>
          <li role="presentation"><a href="/compare">Compare</a></li>
          <li role="presentation">
            <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: transparent;">
              Profile <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><a href="#">My Details</a></li>
              <li><a href="#">Account &amp; Billing</a></li>
              <li><a href="#">Payment Settings</a></li>
              <li><a href="#">Referral</a></li>
              <li><a href="/logout">Sign Out</a></li>
            </ul>
          </li>
        </ul>
        <h1>Contacts</h1>
        {{#if payees}}
        <form method="POST" action="/payees/edit/{{payees.0.nickname}}">
          <select class="form-control" name="payees" onchange="$('form').attr('action', $('select').val())">
          {{#each payees}}
            <option value="/payees/edit/{{this.nickname}}">{{this.nickname}}</option>
          {{/each}}
          </select>
          <p><a class="btn btn-primary" href="/payees/add" role="button">Add Payee</a></p>
          <button type="submit" class="btn btn-warning">Edit Payee</button>
          <!-- <p><a class="btn btn-danger" id="delete" href="/payees/delete/{{payees.0.nickname}}" role="button">Delete Payee</a></p> -->
        </form>
        {{else}}
          <p>Would you like to add your first payee?</p>
          <p><a class="btn btn-primary" href="/payees/add" role="button">Add Payee</a></p>
        {{/if}}
      </div>
    </div>
  </div>
</div>