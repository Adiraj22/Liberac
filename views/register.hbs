<div class="content-section-c">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">

        <h2>Liberac Registration Page</h2>
        <form method="POST" action="/register">
          <div class="well">
            <div class="form-group">
              <label for="email" class="requiredField">Email Address</label>
              <input type="email" name="email" class="form-control" id="email" placeholder="user@example.com" required>
            </div>
            <div class="form-group">
              <label for="username" class="requiredField">Username</label>
              <input type="text" name="username" class="form-control" id="username" placeholder="user1234" required>
            </div>
            <div class="form-group">
              <label for="password" class="requiredField">Password</label>
              <input type="password" name="password" class="form-control" id="password" required>
            </div>
          </div>  

          <div class="row">
            <div class="col-lg-6">
              <div class="well">
                <div class="form-group">
                  <label for="first_name" class="requiredField">First Name</label>
                  <input type="text" name="first_name" class="form-control" id="first_name" placeholder="Jamie" required>
                </div>
                <div class="form-group">
                  <label for="middle_name">Middle Name</label>
                  <input type="text" name="middle_name" class="form-control" id="middle_name" placeholder="Sam">
                  {{!--<span class="help-block">Optional</span>--}}
                </div>
                <div class="form-group">
                  <label for="last_name" class="requiredField">Last Name</label>
                  <input type="text" name="last_name" class="form-control" id="last_name" placeholder="Smith" required>
                </div>
                <div class="form-group">
                  <label for="dateofbirth" class="requiredField">Date of Birth</label>
                  <input type="text" name="dateofbirth" class="form-control" id="dateofbirth" placeholder="YYYY-MM-DD" required>
                </div>
                <div class="form-group">
                  <label for="phone" class="requiredField">Phone Number</label>
                  <input type="tel" name="phone" class="form-control" id="phone" placeholder="0212345678" required>
                </div>   
              </div>
            </div>
            <div class="col-lg-6">
              <div class="well">
                <div class="form-group">
                  <label for="street" class="requiredField">Street</label>
                  <input type="text" name="street" class="form-control" id="street" placeholder="123 Example Street" required>
                </div>
                <div class="form-group">
                  <label for="suburb">Suburb</label>
                  <input type="text" name="suburb" class="form-control" id="suburb" placeholder="Lower Hutt">
                </div>
                <div class="form-group">
                  <label for="city" class="requiredField">City</label>
                  <input type="text" name="city" class="form-control" id="city" placeholder="Wellington" required>
                </div>
                <div class="form-group">
                  <label for="postcode" class="requiredField">Postcode</label>
                  <input type="text" name="postcode" class="form-control" id="postcode" placeholder="1234" required>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <div class="well">
                <div class="checkbox">
                  <label class="requiredField">
                    <input type="checkbox" id="terms" required> I have read and agree to the Terms and Conditions
                  </label>
                </div>
              </div>          
            </div>
          </div>
          <span class="help-block small redText">* Required field</span>

          <button type="submit" class="btn btn-danger" id="register">Register</button>
        </form>
      </div>
    </div>
  </div>
</div>